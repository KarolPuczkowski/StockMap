<div id="map" style="width: 100%; height: 600px; order: -1;"></div>

<script type="text/javascript">
    require(['leaflet'], function(L) {
        var map = L.map('map').setView([54.5260, 15.2551], 4);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
        }).addTo(map);

        <?php foreach ($block->getStockSources($this->getRequest()->getParam('stock_id')) as $source): ?>
        L.marker([<?= $source['latitude'] ?>, <?= $source['longitude'] ?>])
            .addTo(map)
            .bindPopup("<?= addslashes($source['name']) ?>");
        <?php endforeach; ?>
    });
</script>